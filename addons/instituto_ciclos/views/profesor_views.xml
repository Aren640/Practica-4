<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_instituto_profesor_list" model="ir.ui.view">
        <field name="name">instituto.profesor.list</field>
        <field name="model">instituto.profesor</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre"/>
                <field name="apellidos"/>
                <field name="numero_colegiado"/>
            </list>
        </field>
    </record>

    <record id="view_instituto_profesor_form" model="ir.ui.view">
        <field name="name">instituto.profesor.form</field>
        <field name="model">instituto.profesor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="apellidos"/>
                        <field name="numero_colegiado"/>
                    </group>
                    <group string="Modulos que imparte">
                        <field name="modulo_ids" readonly="1">
                            <list>
                                <field name="nombre"/>
                                <field name="ciclo_id"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_instituto_profesor_search" model="ir.ui.view">
        <field name="name">instituto.profesor.search</field>
        <field name="model">instituto.profesor</field>
        <field name="arch" type="xml">
            <search>
                <field name="nombre"/>
                <field name="apellidos"/>
                <field name="numero_colegiado"/>
            </search>
        </field>
    </record>

    <record id="action_instituto_profesor" model="ir.actions.act_window">
        <field name="name">Profesores</field>
        <field name="res_model">instituto.profesor</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_instituto_profesor_search"/>
    </record>
</odoo>

