<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_instituto_alumno_list" model="ir.ui.view">
        <field name="name">instituto.alumno.list</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre"/>
                <field name="apellidos"/>
                <field name="modulo_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_instituto_alumno_form" model="ir.ui.view">
        <field name="name">instituto.alumno.form</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="apellidos"/>
                        <field name="modulo_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_instituto_alumno_search" model="ir.ui.view">
        <field name="name">instituto.alumno.search</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <search>
                <field name="nombre"/>
                <field name="apellidos"/>
                <field name="modulo_ids"/>
            </search>
        </field>
    </record>

    <record id="action_instituto_alumno" model="ir.actions.act_window">
        <field name="name">Alumnos</field>
        <field name="res_model">instituto.alumno</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_instituto_alumno_search"/>
    </record>
</odoo>

