<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_instituto_ciclo_list" model="ir.ui.view">
        <field name="name">instituto.ciclo.list</field>
        <field name="model">instituto.ciclo</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre"/>
                <field name="descripcion"/>
            </list>
        </field>
    </record>

    <record id="view_instituto_ciclo_form" model="ir.ui.view">
        <field name="name">instituto.ciclo.form</field>
        <field name="model">instituto.ciclo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="descripcion"/>
                    </group>
                    <group string="Modulos del ciclo">
                        <field name="modulo_ids" readonly="1">
                            <list>
                                <field name="nombre"/>
                                <field name="profesor_id" groups="instituto_ciclos.group_director,instituto_ciclos.group_profesor"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_instituto_ciclo_search" model="ir.ui.view">
        <field name="name">instituto.ciclo.search</field>
        <field name="model">instituto.ciclo</field>
        <field name="arch" type="xml">
            <search>
                <field name="nombre"/>
            </search>
        </field>
    </record>

    <record id="action_instituto_ciclo" model="ir.actions.act_window">
        <field name="name">Ciclos Formativos</field>
        <field name="res_model">instituto.ciclo</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_instituto_ciclo_search"/>
    </record>
</odoo>
