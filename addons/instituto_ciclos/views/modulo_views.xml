<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_instituto_modulo_list" model="ir.ui.view">
        <field name="name">instituto.modulo.list</field>
        <field name="model">instituto.modulo</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre"/>
                <field name="ciclo_id"/>
                <field name="profesor_id" groups="instituto_ciclos.group_director,instituto_ciclos.group_profesor"/>
            </list>
        </field>
    </record>

    <record id="view_instituto_modulo_form" model="ir.ui.view">
        <field name="name">instituto.modulo.form</field>
        <field name="model">instituto.modulo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="ciclo_id"/>
                        <field name="profesor_id" groups="instituto_ciclos.group_director,instituto_ciclos.group_profesor"/>
                        <field name="alumno_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_instituto_modulo_search" model="ir.ui.view">
        <field name="name">instituto.modulo.search</field>
        <field name="model">instituto.modulo</field>
        <field name="arch" type="xml">
            <search>
                <field name="nombre"/>
                <field name="ciclo_id"/>
                <field name="profesor_id" groups="instituto_ciclos.group_director,instituto_ciclos.group_profesor"/>
            </search>
        </field>
    </record>

    <record id="action_instituto_modulo" model="ir.actions.act_window">
        <field name="name">Modulos</field>
        <field name="res_model">instituto.modulo</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_instituto_modulo_search"/>
    </record>
</odoo>

