<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="biblioteca_comic_action" model="ir.actions.act_window">
        <field name="name">Comics</field>
        <field name="res_model">biblioteca.comic</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem name="Biblioteca Comics" id="biblioteca_base_menu"/>
    <menuitem name="Comics" id="biblioteca_comic_menu" parent="biblioteca_base_menu" action="biblioteca_comic_action" sequence="10"/>

    <record id="biblioteca_comic_view_list" model="ir.ui.view">
        <field name="name">biblioteca.comic.list</field>
        <field name="model">biblioteca.comic</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre"/>
                <field name="fecha_publicacion"/>
                <field name="estado"/>
            </list>
        </field>
    </record>

    <record id="biblioteca_comic_view_form" model="ir.ui.view">
        <field name="name">biblioteca.comic.form</field>
        <field name="model">biblioteca.comic</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" name="archivar" string="Archivar Comics"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="nombre"/>
                            <field name="autor_ids" widget="many2many_tags"/>
                            <field name="estado"/>
                            <field name="paginas"/>
                            <field name="activo" readonly="1"/>
                        </group>
                        <group>
                            <field name="precio"/>
                            <field name="fecha_publicacion"/>
                            <field name="portada" widget="image" class="oe_avatar"/>
                            <field name="valoracion_lector"/>
                        </group>
                    </group>
                    <group>
                        <field name="descripcion"/>
                    </group>
                    <notebook>
                        <page string="Ejemplares prestables">
                            <field name="ejemplar_ids">
                                <list editable="bottom">
                                    <field name="comic_id" readonly="1"/>
                                    <field name="socio_id"/>
                                    <field name="fecha_inicio_prestamo"/>
                                    <field name="fecha_fin_prevista"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="biblioteca_comic_view_search" model="ir.ui.view">
        <field name="name">biblioteca.comic.search</field>
        <field name="model">biblioteca.comic</field>
        <field name="arch" type="xml">
            <search>
                <field name="nombre"/>
                <field name="autor_ids"/>
                <filter string="Sin autor" name="sin_autor" domain="[('autor_ids','=',False)]"/>
            </search>
        </field>
    </record>

</odoo>
