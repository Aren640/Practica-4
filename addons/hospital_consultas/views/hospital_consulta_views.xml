<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hospital_consulta_list" model="ir.ui.view">
        <field name="name">hospital.consulta.list</field>
        <field name="model">hospital.consulta</field>
        <field name="arch" type="xml">
            <list>
                <field name="fecha_consulta"/>
                <field name="paciente_id"/>
                <field name="medico_id"/>
                <field name="diagnostico"/>
            </list>
        </field>
    </record>

    <record id="view_hospital_consulta_form" model="ir.ui.view">
        <field name="name">hospital.consulta.form</field>
        <field name="model">hospital.consulta</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="fecha_consulta"/>
                        <field name="paciente_id"/>
                        <field name="medico_id"/>
                        <field name="diagnostico"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_consulta_search" model="ir.ui.view">
        <field name="name">hospital.consulta.search</field>
        <field name="model">hospital.consulta</field>
        <field name="arch" type="xml">
            <search>
                <field name="paciente_id"/>
                <field name="medico_id"/>
                <field name="fecha_consulta"/>
            </search>
        </field>
    </record>

    <record id="action_hospital_consulta" model="ir.actions.act_window">
        <field name="name">Consultas</field>
        <field name="res_model">hospital.consulta</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_hospital_consulta_search"/>
    </record>
</odoo>
